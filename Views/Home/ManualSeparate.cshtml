@model laba12.Models.Numbers
@{
    ViewData["Title"] = "ManualWithSeparateHandles - Backend2";
}
<div class="text-left">
    <h1 class="display-6">ManualWithSeparateHandles</h1>
    <form method="post" asp-action="ManualSeparateResult">
        <input type="number" name="num1" /><br />
        <select name="operation">
            <option value="add">+</option>
            <option value="sub">-</option>
            <option value="mult">*</option>
            <option value="div">/</option>
        </select><br />
        <input type="number" name="num2" /><br />
        <input type="submit" value="Submit" />
    </form>
</div>